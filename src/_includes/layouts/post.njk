layout: base.njk
---
<section class="blog-post">
    <header class="blog-post-header">
        <p class="section-eyebrow">{{ page.date | readableDate }}</p>
        <h1>{{ title }}</h1>
        {% if description %}
            <p class="section-body">{{ description }}</p>
        {% endif %}
    </header>
    <article class="blog-post-body">
        {{ content | safe }}
    </article>
</section>
